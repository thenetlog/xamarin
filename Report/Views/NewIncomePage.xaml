<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Report.Views.NewIncomePage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="IncomeId" FontSize="16" />
            <Entry Text="{Binding Income.IncomeId}" FontSize="13" />
            <Label Text="TransactionDate" FontSize="16" />
            <Editor Text="{Binding Income.TransactionDate }" FontSize="13" Margin="0" />
            <Label Text="DonarName" FontSize="16" />
            <Editor Text="{Binding Income.DonarName }" FontSize="13" Margin="0" />
            <Label Text="Amount" FontSize="16" />
            <Editor Text="{Binding Income.Amount }" FontSize="13" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>