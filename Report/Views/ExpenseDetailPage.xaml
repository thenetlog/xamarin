<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Report.Views.ExpenseDetailPage"
             Title="{Binding Title}">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ExpenseID:" FontSize="16" />
            <Label Text="{Binding Item.Id}" FontSize="13"/>
            <Label Text="Particular:" FontSize="16" />
            <Label Text="{Binding Item.Particular}" FontSize="13"/>
            <Label Text="Amount:" FontSize="16" />
            <Label Text="{Binding Item.Amount}" FontSize="13"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>