<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Report.Views.NewExpensePage"
              Title="New Expense">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="ExpenseId" FontSize="16" />
            <Entry Text="{Binding Expense.Id}" FontSize="13" />
            <Label Text="TransactionDate" FontSize="16" />
            <Editor Text="{Binding Expense.TransactionDate }" FontSize="13" Margin="0" />
            <Label Text="Particular" FontSize="16" />
            <Editor Text="{Binding Expense.Particular }" FontSize="13" Margin="0" />
            <Label Text="Amount" FontSize="16" />
            <Editor Text="{Binding Expense.Amount }" FontSize="13" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
